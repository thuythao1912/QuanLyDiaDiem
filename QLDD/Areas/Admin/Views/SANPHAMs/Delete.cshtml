@model QLDD.Models.SANPHAM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<h3>Bạn có muốn xóa sản phẩm này?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.SANPHAM_TEN)</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            MÔ TẢ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SANPHAM_MOTA)
        </dd>

        <dt>
            GIÁ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SANPHAM_GIA)
        </dd>

        <dt>
            TÊN ĐỊA ĐIỂM
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIADIEM.DIADIEM_TEN)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input class="btn btn-primary" type="submit" value="Delete" style="width:60px;height:32px;background-color:#394A59;" /> |
            <button class="btn btn-primary" style="width:100px;height:32px;background-color:#394A59;">@Html.ActionLink("Back to List", "Index")</button>
        </div>
    }
</div>

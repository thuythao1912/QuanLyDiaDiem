@model QLDD.Models.BAIDANG

@{
    Layout = null;
}



    <div class="span8" style="border: solid 1px #eee;">
        <div style="display: flex; align-items:center; justify-content:space-between; border-bottom: solid 1px #eee; padding: 0px 15px">
            <h3 style="color: #c82933"><strong>THÊM BÀI ĐĂNG MỚI</strong></h3>
            <button class="btn btn-default" onclick="getBaiDang(@TempData["ID"], '@TempData["IDKH"]' )">
                Trở về
            </button>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table style="margin :10px">

                    <tr>
                        <th width="30%">NỘI DUNG</th>
                        <td>
                            @Html.TextAreaFor(model => model.BAIDANG_NOIDUNG, 5, 100, new { htmlAttributes = new { @class = "form-control", @maxlength = "255"}, @required="required"})
                            @Html.ValidationMessageFor(model => model.BAIDANG_NOIDUNG, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td height="50">

                            <input type="submit" value="Lưu" class="btn btn-warning" />
                        </td>
                    </tr>
                </table>



            </div>
        }
        
    </div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
     //get bai dang
    function getBaiDang(dd, kh) {
        $.ajax({
            method: 'get',
            url: '/baidang/dsbaidang',
            data: { id: dd, idkh: kh },
            success: function (res) {
                $("#result").html(res);
            }
        })
    }
</script>



